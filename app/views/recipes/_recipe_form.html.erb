<div class="row">
  <%= render 'shared/errors', obj: @recipe %>
  <%= form_with(model: @recipe, local: true, html: {class: "row center-align", id:"new_recipe"}) do |f| %>
    <div class="input-field col s12 m4">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Recipe Name", class: "validate", type: "text" %>
    </div>
    <div class="input-field col s12 m4">
      <%= f.label :image %>
      <%= f.text_field :image, placeholder: "Image Url", class: "validate", type: "text" %>
    </div>
    <div class="input-field col s12 m4">
      <%= f.label :url %>
      <%= f.text_field :url, placeholder: "Original Site Url", class: "validate", type: "text" %>
    </div>
    <div class="input-field col s12">
      <%= f.label :ingredients %>
      <%= f.text_area :ingredients, placeholder: "List of Ingredients", class: "materialize-textarea" %>
    </div>
    <div class="input-field col s12">
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "Recipe Instructions", class: "materialize-textarea" %>
    </div>
    <div class="input-field col s12 category-flex">
      <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
        <div class="col m2 s12 category-flex-item left-align">
          <label>
            <%= cb.check_box %>
            <span><%= cb.text %></span>
          </label>
        </div>
      <% end %>
    </div>
    <div class="row">
      <%= f.submit class: "btn waves-effect waves-light" %>
    </div>
  <% end %>
</div>
