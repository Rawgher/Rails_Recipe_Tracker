<div class="row valign-wrapper">
  <%= render 'shared/errors', obj: @recipe %>
  <%= form_with(model: @recipe, local: true, html: {class: "row center-align", id:"new_recipe"}) do |f| %>
    <div class="input-field col s12 m6">
      <%= f.label :title %>
      <%= f.text_field :title, placeholder: "Recipe Name", class: "validate", type: "text" %>
    </div>
    <div class="input-field col s12 m6">
      <%= f.label :image %>
      <%= f.text_field :image, placeholder: "Image url", class: "validate", type: "text" %>
    </div>
    <div class="input-field col s12">
      <%= f.label :description %>
      <%= f.text_area :description, placeholder: "Recipe Instructions", class: "materialize-textarea" %>
    </div>
    <div class="input-field col s12">
      <%= f.label :category %>
      <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Please Select From the List (can be empty)"}, {multiple: true}) %>
    </div>
    <%= f.submit class: "btn waves-effect waves-light" %>
  <% end %>
</div>
