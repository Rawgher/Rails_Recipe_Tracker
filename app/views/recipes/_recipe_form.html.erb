<div>
  <%= form_with(model: @recipe, local: true) do |f| %>
    <div>
      <p>
        <%= f.label :title %>
        <%= f.text_field :title, placeholder: "Recipe Name" %>
      </p>
    </div>
    <div>
      <p>
        <%= f.label :description %>
        <%= f.text_area :description, rows: 10, placeholder: "Recipe Instructions" %>
      </p>
    </div>
    <div>
      <p>
        <%= f.label :image %>
        <%= f.text_field :image, placeholder: "Image url" %>
      </p>
    </div>
    <div>
      <p>
        <%= f.label :category %>
         <%= f.collection_select(:category_ids, Category.all, :id, :name, {prompt: "Please Select From the List (can be empty)"}, {multiple: true, size: 3}) %>
      </p>
    </div>
    <div>
      <p>
        <%= f.submit %>
      </p>
    </div>
  <% end %>
</div>
