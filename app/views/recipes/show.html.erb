<h1 class="tc">RECIPE SHOW PAGE</h1>

<div class="measure center">
  <article class="pv4 bt bb b--black-10 ph3 ph0-l">
    <div class="flex flex-column flex-row-ns">
      <div class="w-100 w-60-ns pr3-ns order-2 order-1-ns">
        <h1 class="f3 athelas mt0 lh-title"><%= @recipe.title %></h1>
        <% if @recipe.categories.any? %>
          <p>Categories: <%= render @recipe.categories %></p>
        <% end %>
        <p class="f5 f4-l lh-copy athelas">
          <%= simple_format(@recipe.description) %>
        </p>
      </div>
      <div class="pl3-ns order-1 order-2-ns mb4 mb0-ns w-100 w-40-ns">
        <img src="http://mrmrs.github.io/photos/cpu.jpg" class="db" alt="Photo of a dimly lit room with a computer interface terminal.">
        <%# <%= simple_format(@recipe.image) %> %>
      </div>
    </div>
    <time class="f6 db gray">Created <%= time_ago_in_words(@recipe.created_at) %> ago, edited <%= time_ago_in_words(@recipe.updated_at) %> ago</time>
    <div class="tc">
      <% if logged_in? && (@recipe.user == current_user || current_user.admin?) %>
        <%= link_to "Edit", edit_recipe_path(@recipe), class: "f6 link dim ph3 pv2 mb2 dib white bg-dark-blue" %>
        <%= link_to "Delete", recipe_path(@recipe), class: "f6 link dim ph3 pv2 mb2 dib white bg-dark-red", method: :delete, data: {confirm: "Are you sure?"} %>
      <% end %>
    </div>
  </article>
</div>
