<div class="row">
  <% @categories.each do |category| %>
    <div class="col s12 m3">
      <div class="card">
        <div class="card-content center-align">
          <div class="row">
            <span class="card-title"><%= link_to category.name, category_path(category) %></span>
          </div>
          <div class="row">
            <p><%= pluralize(category.recipes.count, "recipe") %></p>
          </div>
          <div class="row">
            <small>Created <%= time_ago_in_words(category.created_at) %> ago, edited <%= time_ago_in_words(category.updated_at) %> ago</small>
          </div>
        </div>
      </div>
    </div>
  <% end %>
</div>
